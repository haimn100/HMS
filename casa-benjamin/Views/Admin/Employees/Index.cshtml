
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Staff user = (Staff)Session["user"];

}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @I18n.T("Employees")
                </h2>                
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-responsive-table dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@I18n.T("Id")</th>
                                <th>@I18n.T("Name")</th>
                                <th>@I18n.T("Email")</th>
                                <th>@I18n.T("Phone")</th>
                                <th>@I18n.T("Type")</th>
                                <th>@I18n.T("Currently Wroking")</th>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in UserManager.Instance.GetAllStaff())
                            {
                                <tr>
                                    <td>@member.id</td>
                                    <td>@member.name</td>
                                    <td>@member.email</td>
                                    <td>@member.phone</td>
                                    <td>@member.type.ToString()</td>
                                    <td>@member.is_working.ToString()</td>
                                    <td><a href="/admin/employeeedit?id=@member.id">edit</a></td>
                                    @if (user.type == UserType.Admin || user.type == UserType.Editor)
                                    {
                                        <td><a onclick="return confirm('@I18n.T("Are you sure?")')" href="/admin/employeedelete?id=@member.id">@I18n.T("Delete")</a></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


