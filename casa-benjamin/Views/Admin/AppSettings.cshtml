
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h3>@I18n.T("SETTINGS")</h3>
            </div>
            <div class="body">
                @{ var settings = CacheManager.Instance.AppSettings;}
                <form class="form-horizontal" method="post" action="/admin/savesettings">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="email_address_2">@I18n.T("Add Credit Card Charge To Register")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input id="addCreditCardChargeToRegister" value="true" name="addCreditCardChargeToRegister" type="checkbox" @if (settings.AddCreditCardChargeToRegister) { <text>checked="checked"</text> }/>
                                    <label for="addCreditCardChargeToRegister"></label>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="email_address_2">@I18n.T("Require Immigration Info")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input id="requireImmigrationInfo" name="requireImmigrationInfo" value="true" type="checkbox" @if (settings.RequireImmigrationInfo) { <text> checked="checked" </text>  } />
                                    <label for="requireImmigrationInfo"></label>                                                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="email_address_2">@I18n.T("CheckIn Default Nationality")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="checkInDefaultNationality"  name="checkInDefaultNationality" value="@settings.CheckInDefaultNationality"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="email_address_2">@I18n.T("Barcode Prefix")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="barcodePrefix" name="barcodePrefix" value="@settings.barcodePrefix" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="email_address_2">@I18n.T("Language")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <select name="language">
                                        <option value="en" @if (settings.language == "en") {<text>selected="selected"</text>}>@I18n.T("English")</option>
                                        <option value="es" @if (settings.language == "es") {<text>selected="selected"</text>}>@I18n.T("Spanish")</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="city">@I18n.T("City")</label>
                        </div>
                        <div class="col-lg-2 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <select class="select2" name="city" id="city" required data-cities data-default-code="@settings.city"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="hotel_code">@I18n.T("Hotel Code")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="hotel_code" name="hotel_code" value="@settings.hotel_code" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-5 form-control-label">
                            <label for="print_info">@I18n.T("Print Info")</label>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <textarea cols="30" rows="7" id="print_info" name="hotel_print_info">
                                        @Html.Raw(settings.hotel_print_info)
                                    </textarea>
                                </div>
                            </div>
                        </div>
                    </div>                    
                    <div class="row clearfix">
                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">@I18n.T("SAVE")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div>
</div>

